    "prebuild:ext": "rimraf ./compiled && cpr ./public ./compiled && tsc",
    "build:ext": "webextension-toolbox build --src ./compiled firefox --target ./dist/extension/[vendor]",
    "start:web": "react-app-rewired start",
    "build:web": "react-app-rewired build",
    "test:web": "react-app-rewired test",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
