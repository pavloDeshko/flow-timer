{
  "manifest_version":2,
  "name":"Flow Timer",
  "version":"0.1.0",
  "description":"Smart and flexible pommodoro timer for timing your rests.",
  "icons":{"48":"res/main.svg","96":"res/main.svg"},
  "permissions":[
    "notifications",
    "*://api.track.toggl.com/*",
    "webRequest",
    "storage"
  ],
  "browser_action":{
    "default_icon":{"16":"res/idle_16.png", "32":"res/idle_32.png", "64":"res/idle_64.png"},
    "default_title":"Flow Timer",
    "default_popup":"index.html"
  },
  "background":{
    "scripts":["scripts/background.js"]
  },
  "web_accessible_resources":["res/sound/*.ogg"]
}