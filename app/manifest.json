{
  "manifest_version":2,
  "name":"Flow Timer",
  "version":"0.1.0",
  "description":"Smart and flexible pommodoro timer for timing your rests.",
  "icons":{
    "48":"icons/main.svg",
    "96":"icons/main.svg"
  },
  "permissions":[
    "notifications",
    "*://api.track.toggl.com/*",
    "webRequest",
    "storage"
  ],
  "browser_action":{
    "default_icon":"icons/idle.svg",
    "default_title":"Flow Timer",
    "default_popup":"popup/index.html"
  },
  "background":{
    "scripts":["scripts/background.js"]
  }
}