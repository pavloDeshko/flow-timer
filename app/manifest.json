{
  "manifest_version":2,
  "name":"Ketchup Timer",
  "version":"0.1.0",
  "description":"Smart and flexible pommodoro timer for timing your rests.",
  "icons":{
    "48":"icons/timer_48.png"
  },
  "permissions":[
    "notifications",
    "*://api.track.toggl.com/*",
    "webRequest",
    "storage"
  ],
  "browser_action":{
    "default_icon":"icons/timer_32.png",
    "default_title":"Ketchup Timer",
    "default_popup":"popup/index.html"
  },
  "background":{
    "scripts":["scripts/background.js"]
  }
}